<UserControl
    x:Class="Debtor.DebtListViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Debtor"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" >
    
    <Grid>
    	<Border BorderBrush="Black" BorderThickness="1">
    		<Grid VerticalAlignment="Top">
    			<Grid.ColumnDefinitions>
    				<ColumnDefinition/>
    				<ColumnDefinition Width="20"/>
    				<ColumnDefinition/>
    			</Grid.ColumnDefinitions>
    			<StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
    				<TextBlock TextWrapping="Wrap" Text="이름 :" HorizontalAlignment="Right" Margin="0,0,10,0" FontSize="18.667"/>
    				<TextBlock x:Name="nameText" TextWrapping="Wrap" HorizontalAlignment="Right" FontSize="18.667"/>
    			</StackPanel>
    			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2">
    				<TextBlock TextWrapping="Wrap" Text="빚 :" FontSize="18.667" Margin="0,0,10,0"/>
    				<TextBlock x:Name="amountText" TextWrapping="Wrap" FontSize="18.667"/>
    				<TextBlock TextWrapping="Wrap" Text="원" FontSize="18.667"/>
    			</StackPanel>
    		</Grid>
    	</Border>

    </Grid>
</UserControl>
